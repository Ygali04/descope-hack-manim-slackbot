# =============================================================================
# ManimPro Environment Configuration
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Slack App Configuration (Agent A)
# Get these from your Slack app settings at https://api.slack.com/apps
# -----------------------------------------------------------------------------
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# -----------------------------------------------------------------------------
# Descope Configuration
# Get these from your Descope console at https://app.descope.com
# -----------------------------------------------------------------------------
DESCOPE_PROJECT_ID=your-descope-project-id
DESCOPE_MANAGEMENT_KEY=your-descope-management-key
DESCOPE_JWKS_URL=https://api.descope.com/v1/keys/your-project-id

# -----------------------------------------------------------------------------
# Agent B Configuration
# -----------------------------------------------------------------------------
AGENT_B_AUD=manimpro-agent-b
AGENT_B_URL=https://your-cequence-gateway.com/agent-b

# -----------------------------------------------------------------------------
# Development JWT Secret (NOT for production!)
# Change this in production to use proper Descope tokens
# -----------------------------------------------------------------------------
DEV_JWT_SECRET=manimpro-dev-secret-change-in-production

# -----------------------------------------------------------------------------
# Cequence AI Gateway Configuration
# Set this when deploying Agent B behind Cequence
# -----------------------------------------------------------------------------
CEQUENCE_GATEWAY_URL=https://your-cequence-gateway.com
CEQUENCE_API_KEY=your-cequence-api-key

# -----------------------------------------------------------------------------
# Optional: Production Database/Cache
# Uncomment and configure for production deployments
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379
# DATABASE_URL=postgresql://user:pass@localhost:5432/manimpro

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST=0.0.0.0
WORKERS=4
NODE_ENV=development

# -----------------------------------------------------------------------------
# Manim Configuration
# -----------------------------------------------------------------------------
MANIM_OUTPUT_DIR=/tmp/manim_output
MANIM_CACHE_DIR=/tmp/manim_cache
MANIM_QUALITY=medium_quality
MANIM_TIMEOUT=120

# -----------------------------------------------------------------------------
# MCP Configuration
# -----------------------------------------------------------------------------
MCP_SERVER_NAME=manimpro-agent-b
MCP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Security & Performance
# -----------------------------------------------------------------------------
MAX_RENDER_DURATION=300
MAX_FILE_SIZE=100000000

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
DEBUG=false

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
SLACK_AGENT_PORT=3000
MANIM_AGENT_PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1,your-cequence-gateway.com 